{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "view",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.view.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "view",
        "width": 1200,
        "height": 760
      }
    ],
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.github.com/Nacir1i/c96cb8f15d8c279f0ec8f89067bef07d/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZFRTFDQkREQzU2NzFENwpSV1RYY1ZiY3ZSenVEMlUwM3RITDZsVUllWm5zZlM1WHJ6Q2tqQ1NDcWFsNHgyS2hDdjB3elhDdwo="
    }
  }
}
